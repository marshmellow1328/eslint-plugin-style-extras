{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "block-spacing": [ "error", "always" ],
        "brace-style": [ "error", "1tbs" ],
        "function-paren-newline": [ "error", "consistent" ],
        "indent": [ "error", 4 ],
        "lines-between-class-members": [ "error", "always" ],
        "linebreak-style": [ "error", "unix" ],
        "no-console": [ "off" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ]
    }
}
